@model IEnumerable<IdentityRole>
@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMetronic.cshtml";
}

<h1>All Roles</h1>
<div><a asp-action="CreateRole" asp-controller="Account" class="btn btn-primary">Create New </a></div>&nbsp;&nbsp;&nbsp;

@foreach (var item in Model)
{

<div class="card">
    <div class="card-header">Role Name</div>
    <div class="card-body">
        @item.Name
    </div>
    <div class="card-footer">
        <a asp-action="EditRole" asp-controller="Account" class="btn btn-primary" asp-route-RoleId="@item.Id">Edit</a>
        <a asp-action="DeleteRole" asp-controller="Account" class="btn btn-primary" asp-route-RoleId="@item.Id">Delete</a>
    </div>
</div>

}

