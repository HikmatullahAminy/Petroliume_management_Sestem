@model AHMSApplicationDemo.ViewModels.AccountViewModels.EditRoleViewModel
@{
    ViewData["Title"] = "EditeRole";
}

<h2>EditeRole</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control " disabled />
    </div>

    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" class="form-control" />
        <span class="" asp-validation-for="RoleName"></span>
    </div>

    <div>
        <button type="submit" asp-action="EditRole" asp-controller="account" class="btn btn-success" asp-route-RoleId="@Model.Id">Update</button>
        <a asp-action="ListRole" asp-controller="account" class="btn btn-success">Cancel</a>
    </div>

</form>


@if (Model.Users.Any())
{
   
<div class="card">
    <div class="card-header">Users In This Role</div>
    @foreach (var user in Model.Users)
    {
        <div class="card-body">

            @user

        </div>
    }
    <div class="card-footer">
        <a asp-route-RoleId="@Model.Id" asp-action="EditUserInRole" asp-controller="account" class="btn btn-success">Add Or Remove User</a>

    </div>
</div>


   
}
else
{
    <div class="card">
        <div class="card-header">Users In This Role</div>
        <div class="card-body">
            <H3>There is no User in This role</H3>
        </div>
        <div class="card-footer">
            <a asp-route-RoleId="@Model.Id" asp-action="EditUserInRole" asp-controller="account" class="btn btn-success">Add Or Remove User</a>

        </div>
    </div>
  
}



