@using AHMSApplicationDemo.Data
@inject ApplicationDbContext _context
@model IEnumerable<AHMSApplicationDemo.Models.HalfDebts>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create"  class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemainingDebts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptsId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RemainingDebts)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.DeptsId)
                @Html.DisplayFor(modelItem => item.Dept.CustomerName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HalfDebtId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HalfDebtId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HalfDebtId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
